<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE task PUBLIC "-//OASIS//DTD DITA Task//EN" "http://docs.oasis-open.org/dita/v1.1/OS/dtd/task.dtd">
<task id="taskId">
    <title>Options</title>
    <taskbody>
        <steps>
            <step>
                <cmd>Select or deselect <uicontrol>Case sensitive</uicontrol>.</cmd>
                <stepresult>If selected, results differing only in the case of characters
                (i.e. uppercase or lowercase) will be counted separately.</stepresult>
            </step>
            <step>
                <cmd>Select or deselect <uicontrol>Ignore diacritics</uicontrol>.</cmd>
                <stepresult>If selected, results differing only in the diacritics placed
                on phones will be conflated during counting.</stepresult>
            </step>
        </steps>
    </taskbody>
</task>
