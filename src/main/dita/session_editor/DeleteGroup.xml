<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE task PUBLIC "-//OASIS//DTD DITA Task//EN" "http://docs.oasis-open.org/dita/v1.1/OS/dtd/task.dtd">
<task id="taskId">
    <title>Delete Group</title>
    <shortdesc>Delete a word group.</shortdesc>
    <taskbody>
        <context>From the <wintitle>Record Data</wintitle> view:</context>
        <steps>
            <step>
                <cmd>Position the cursor inside a group in the <i>Orthography</i> tier that you wish
                    to delete.</cmd>
            </step>
            <step>
                <cmd>Click the <uicontrol>Delete current group</uicontrol> button in the
                        <wintitle>Record Data</wintitle> view, or select the <menucascade>
                        <uicontrol>View</uicontrol>
                        <uicontrol>Record Data</uicontrol>
                        <uicontrol>Delete current group</uicontrol>
                    </menucascade> (<userinput>OPT/ALT+Shift+CMD+G</userinput>) menu item.</cmd>
                <stepresult>The selected group will be deleted, including all data in aligned
                    groups.</stepresult>
            </step>
        </steps>
    </taskbody>
</task>