<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE task PUBLIC "-//OASIS//DTD DITA Task//EN" "http://docs.oasis-open.org/dita/v1.1/OS/dtd/task.dtd">
<task id="taskId">
    <title>Open Media</title>
    <shortdesc>Open a media file which has already been linked to a session.</shortdesc>
    <taskbody>
        <context>From the <wintitle>Session Editor</wintitle> window:</context>
        <steps>
            <step>
                <cmd>Choose the <menucascade>
                        <uicontrol>View</uicontrol>
                        <uicontrol>Media Player</uicontrol>
                    </menucascade> menu item.</cmd>
                <stepresult>The <wintitle>Media Player</wintitle> view will appear.</stepresult>
            </step>
        </steps>
    </taskbody>
</task>
