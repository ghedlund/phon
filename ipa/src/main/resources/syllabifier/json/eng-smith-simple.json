{
  "name": "English-Smith-simple",
  "language": "eng-smith-simple",
  "sonority": [
    {
      "pattern": "[{obstruent}]",
      "sonority": 0
    },
    {
      "pattern": "[{c, nasal}]",
      "sonority": 1
    },
    {
      "pattern": "[{liquid}]",
      "sonority": 2
    },
    {
      "pattern": "[{g}]",
      "sonority": 3
    },
    {
      "pattern": "[{v}]",
      "sonority": 4
    }
  ],
  "steps": [
    {
      "name": "MarkNuclei #1",
      "pattern": "(D\u003dj{v})"
    },
    {
      "name": "MarkNuclei #2",
      "pattern": "(D\u003d{v,-long}[É™{g,-stop,-fricative,-affricate,-liquid}{v,high}])"
    },
    {
      "name": "MarkNuclei #3",
      "pattern": "(N\u003d{v}:U)"
    },
    {
      "name": "MarkNuclei #4",
      "pattern": "(N\u003d\u0027.*[\\u0329].*\u0027)"
    },
    {
      "name": "MarkOnset #1",
      "pattern": "(O\u003d\\c:U).:N"
    },
    {
      "name": "MarkOnset #2",
      "pattern": ".:sctype(\"-O\")?(O\u003d{g}:N).:N"
    },
    {
      "name": "MarkOnset #3",
      "pattern": "^(O\u003dj:N)"
    },
    {
      "name": "MaxOnset #1",
      "pattern": "(O\u003d{c,-strident}:U).:O:mdc(\"2\",\"false\")"
    },
    {
      "name": "MaxOnset #2",
      "pattern": "(O\u003d{strident, -anterior}:U).:O:mdc(\"2\",\"false\")"
    },
    {
      "name": "Fix Cju #1",
      "pattern": "\\c:O(D\u003dj:Ou)"
    },
    {
      "name": "MarkCoda #1",
      "pattern": ".:N(C\u003d\\c:U)"
    },
    {
      "name": "MaxCoda #1",
      "pattern": ".:C(C\u003d{c}:U:mdc(\"-1\",\"false\"))"
    },
    {
      "name": "Fix Branching Codas #1",
      "pattern": ".:N(C\u003d{obs,-cor}:U)"
    },
    {
      "name": "MarkLA #1",
      "pattern": "\\b\\s?(LA\u003d{anterior,strident,voiceless}).:O"
    },
    {
      "name": "MarkLA #2",
      "pattern": ".:C\\s?(LA\u003d{anterior,strident,voiceless}).:O"
    },
    {
      "name": "MarkRA #1",
      "pattern": ".:C(R\u003d{cor}:U)"
    },
    {
      "name": "MaxRA #1",
      "pattern": ".:R(R\u003d{cor}:U+)"
    },
    {
      "name": "MarkOEHS #1",
      "pattern": "(E\u003d\\c:U)"
    },
    {
      "name": "Make Simple #1",
      "pattern": "(C\u003d.:E+)"
    },
    {
      "name": "Make Simple #2",
      "pattern": "(O\u003d.:L+)"
    },
    {
      "name": "Make Simple #3",
      "pattern": "(C\u003d.:R+)"
    }
  ]
}