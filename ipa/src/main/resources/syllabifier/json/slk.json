{
  "name": "Slovak",
  "language": "slk",
  "sonority": [
    {
      "pattern": "{obs}",
      "sonority": 0
    },
    {
      "pattern": "{nas}",
      "sonority": 1
    },
    {
      "pattern": "{liq}",
      "sonority": 2
    },
    {
      "pattern": "\\g",
      "sonority": 3
    },
    {
      "pattern": "\\v",
      "sonority": 4
    }
  ],
  "steps": [
    {
      "name": "MarkNuclei #1",
      "pattern": "(D=\\v{v,nonsyllabic})"
    },
    {
      "name": "MarkNuclei #2",
      "pattern": "(D={v,nonsyllabic}\\v)"
    },
    {
      "name": "MarkNuclei #3",
      "pattern": "(N=\\v)"
    },
    {
      "name": "MarkNuclei #4",
      "pattern": "(N={liq,long})"
    },
    {
      "name": "MarkNuclei (short liquids) #1",
      "pattern": "\\c(N={liq}:U)\\c"
    },
    {
      "name": "MarkOnset #1",
      "pattern": "(O=\\c:U).:N"
    },
    {
      "name": "MaxOnset1 #1",
      "pattern": "(O=\\c:U).:O:mdc(\"1\",\"false\")"
    },
    {
      "name": "MaxOnset(Sibilant) #1",
      "pattern": ".:sctype(\"-N\")(O={cor,fri,anterior}){-continuant}:O"
    },
    {
      "name": "MarkCoda #1",
      "pattern": ".:N(C=\\c:U)"
    },
    {
      "name": "MaxCoda1 #1",
      "pattern": ".:C(C=\\c:U:mdc(\"-1\",\"true\"))"
    },
    {
      "name": "MaxOnset2 #1",
      "pattern": "(O=\\c:U).:O:mdc(\"1\",\"false\")"
    },
    {
      "name": "MaxCoda2 #1",
      "pattern": ".:C(C=\\c:U:mdc(\"-1\",\"false\"))"
    },
    {
      "name": "MaxOnset3 #1",
      "pattern": "(O=\\c:U+).:O"
    },
    {
      "name": "MaxCoda3 #1",
      "pattern": ".:C(C=\\c:U+)"
    }
  ]
}