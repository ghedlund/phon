{
  "name": "Catalan-simple",
  "language": "cat-simple",
  "sonority": [
    {
      "pattern": "[{obstruent}]",
      "sonority": 0
    },
    {
      "pattern": "[{c, nasal}]",
      "sonority": 1
    },
    {
      "pattern": "[{liquid}]",
      "sonority": 2
    },
    {
      "pattern": "[{g}]",
      "sonority": 3
    },
    {
      "pattern": "[{v}]",
      "sonority": 4
    }
  ],
  "steps": [
    {
      "name": "MarkNuclei #1",
      "pattern": "(D\u003d\\g\\v)"
    },
    {
      "name": "MarkNuclei #2",
      "pattern": "(D\u003d\\v[{v,high,lax}{g,-stop,-fricative,-affricate,-liquid}])"
    },
    {
      "name": "MarkNuclei #3",
      "pattern": "(D\u003d{v, high, lax}\\v)"
    },
    {
      "name": "MarkNuclei #4",
      "pattern": "(N\u003d\\v:U)"
    },
    {
      "name": "MarkOnset #1",
      "pattern": "(O\u003d\\c:U).:N"
    },
    {
      "name": "MarkOnset #2",
      "pattern": ".:N(O\u003d\\g:N).:N"
    },
    {
      "name": "MaxOnset #1",
      "pattern": "(O\u003d\\c:U)\\c:O:mdc(\"2\",\"false\")"
    },
    {
      "name": "Fix Diphthongs #1",
      "pattern": ".:-O?(O\u003d\\g:N).:N"
    },
    {
      "name": "MarkCoda #1",
      "pattern": ".:N(C\u003d\\c:U)"
    },
    {
      "name": "MaxCoda #1",
      "pattern": ".:C(C\u003d{c}:U:mdc(\"-1\",\"false\"))"
    },
    {
      "name": "MarkRA #1",
      "pattern": ".:C(R\u003d{cor}:U)"
    },
    {
      "name": "MaxRA #1",
      "pattern": ".:R(R\u003d{cor}:U+)"
    },
    {
      "name": "Make Simple #1",
      "pattern": "(C\u003d.:R+)"
    }
  ]
}