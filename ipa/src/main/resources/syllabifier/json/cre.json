  "steps": [
    {
      "name": "MarkNuclei #1",
      "pattern": "(D=\\v[\\g{v,high,lax}])"
    },
    {
      "name": "MarkNuclei #2",
      "pattern": "(N=\\v)"
    },
    {
      "name": "MarkFinalConsonant #1",
      "pattern": "(E=\\c)$"
    },
