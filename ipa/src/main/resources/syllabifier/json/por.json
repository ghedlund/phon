{
  "name": "Portuguese-European",
  "language": "por",
  "sonority": [
    {
      "pattern": "{obs}",
      "sonority": 0
    },
    {
      "pattern": "{nas,c}",
      "sonority": 1
    },
    {
      "pattern": "{liq}",
      "sonority": 2
    },
    {
      "pattern": "\\g",
      "sonority": 3
    },
    {
      "pattern": "\\v",
      "sonority": 4
    }
  ],
  "steps": [
    {
      "name": "MarkNuclei #1",
      "pattern": "(D=\\g\\v)"
    },
    {
      "name": "MarkNuclei #2",
      "pattern": "(D=\\v{g,-stop,-fri,-affricate,-liq})"
    },
    {
      "name": "MarkNuclei #3",
      "pattern": "(N=\\v)"
    },
    {
      "name": "MarkOnset #1",
      "pattern": "(O=\\c:U).:N"
    },
    {
      "name": "MarkOnset #2",
      "pattern": ".:sctype(\"-O\")?(O=\\g:N).:N"
    },
    {
      "name": "MaxOnset #1",
      "pattern": "(O=\\c:U).:O:mdc(\"2\",\"false\")"
    },
    {
      "name": "MarkCoda #1",
      "pattern": ".:N(C={cor,continuant}:U)"
    },
    {
      "name": "MarkInitialCodas #1",
      "pattern": "(C=[\\u0283\\u0292])[{c,-g}\\s\\.]"
    },
    {
      "name": "MarkOEHS #1",
      "pattern": "(E=\\c:U)"
    },
    {
      "name": "Ambisyllabicity #1",
      "pattern": "\\v:N(A=\\g:N)\\v:N"
    }
  ]
}