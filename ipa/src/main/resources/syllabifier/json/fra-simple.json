{
  "name": "French-simple",
  "language": "fra-simple",
  "sonority": [
    {
      "pattern": "[{obs,-uvular}]",
      "sonority": 0
    },
    {
      "pattern": "[{c,nas}]",
      "sonority": 1
    },
    {
      "pattern": "[{liq}{uvular,fri}]",
      "sonority": 2
    },
    {
      "pattern": "\\g",
      "sonority": 3
    },
    {
      "pattern": "\\v",
      "sonority": 4
    }
  ],
  "steps": [
    {
      "name": "MarkNuclei #1",
      "pattern": "(D=\\g\\v)"
    },
    {
      "name": "MarkNuclei #2",
      "pattern": "(D=\\v{v,high,lax})"
    },
    {
      "name": "MarkNuclei #3",
      "pattern": "(N=\\v:U)"
    },
    {
      "name": "Final Consonant #1",
      "pattern": "(E=\\c:U)\\b"
    },
    {
      "name": "MarkOnset #1",
      "pattern": "(O=\\c:U).:N"
    },
    {
      "name": "MarkOnset #2",
      "pattern": "\\b\\s?(O=\\g:N).:N"
    },
    {
      "name": "MarkOnset #3",
      "pattern": ".:N(O=\\g:N).:N"
    },
    {
      "name": "MaxOnset #1",
      "pattern": "(O={c, -strident}:U)\\c:O:mdc(\"2\",\"false\")"
    },
    {
      "name": "MaxOnset #2",
      "pattern": "\\b\\s?(O={c, -strident}:U)\\c:O:mdc(\"1\",\"false\")"
    },
    {
      "name": "MaxOnset #3",
      "pattern": "\\b\\s?(O=\\c:U){fri}:O:mdc(\"1\",\"true\")"
    },
    {
      "name": "MaxOEHS #1",
      "pattern": "(E=\\c:U)\\c:E:mdc(\"2\",\"true\")"
    },
    {
      "name": "MaxOEHS #2",
      "pattern": "(E={c, -strident}:C)\\c:E:mdc(\"2\",\"false\")"
    },
    {
      "name": "MarkCoda #1",
      "pattern": ".:N(C=\\c:U)"
    },
    {
      "name": "MarkLA #1",
      "pattern": "\\b\\s?(LA={strident}).:O"
    },
    {
      "name": "MarkLA #2",
      "pattern": ".:C(LA={strident}).:O"
    },
    {
      "name": "Make Simple #1",
      "pattern": "(C=.:E+)"
    },
    {
      "name": "Make Simple #2",
      "pattern": "(O=.:L+)"
    },
    {
      "name": "Make Simple #3",
      "pattern": "(C=.:R+)"
    }
  ]
}